{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "k",
  "scopeName": "source.k",
  "patterns": [
    {
      "match": "^/\\s*\\S.*$",
      "name": "comment.line"
    },
    {
      "match": "\\s/.*$",
      "name": "comment.line"
    },
    {
      "begin": "^/\\s*$",
      "end": "^\\\\\\s*$",
      "name": "comment.block"
    },
    {
      "begin": "^\\\\\\s*$",
      "end": "\\A(?!x)x",
      "name": "comment.block"
    }
  ]
}
