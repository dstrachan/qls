{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "k",
  "scopeName": "source.k",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#constants"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line",
          "match": "^/\\s*\\S.*$"
        },
        {
          "name": "comment.line",
          "match": "\\s/.*$"
        },
        {
          "name": "comment.block",
          "begin": "^/\\s*$",
          "end": "^\\\\\\s*$"
        },
        {
          "name": "comment.block.trailing",
          "begin": "^\\\\\\s*$",
          "end": "\\z"
        },
        {
          "name": "comment.block.start",
          "begin": "\\A\\s",
          "while": "^\\s"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.directory",
          "match": "^\\\\d\\s+\\.\\w*"
        },
        {
          "name": "keyword.system",
          "match": "^\\\\\\w.*$"
        },
        {
          "name": "keyword",
          "match": "\\b(abs|acos|asin|atan|avg|bin|binr|cor|cos|cov|dev|div|enlist|exit|exp|getenv|hopen|in|insert|last|like|log|max|min|prd|setenv|sin|sqrt|ss|sum|tan|var|wavg|within|wsum|xexp)\\b"
        },
        {
          "name": "keyword.control",
          "match": "\\b(do|if|while)\\b"
        },
        {
          "name": "keyword.sql",
          "match": "\\b(delete|exec|select|update)\\b"
        },
        {
          "name": "variable.language",
          "match": "\\.z\\.(D|K|N|P|T|W|X|Z|a|ac|b|bm|c|d|e|ex|exit|ey|f|h|i|k|l|n|o|p|pc|pd|pg|ph|pi|pm|po|pp|pq|ps|pw|q|s|t|ts|u|vs|w|wc|wo|ws|x|z|zd)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "comment": "variable",
          "match": "(?<![a-zA-Z\\d])\\.?[a-zA-Z][a-zA-Z\\d]*(\\.[a-zA-Z\\d]+)*",
          "name": "variable"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "comment": "guid",
          "name": "constant.numeric",
          "match": "\\b0[nN]g\\b"
        },
        {
          "comment": "null/infinity",
          "name": "constant.numeric",
          "match": "(-?0[wW]|0[nN])[hijefcpmdznuvt]?\\b"
        },
        {
          "comment": "boolean",
          "match": "[01]+b",
          "name": "constant.numeric"
        },
        {
          "comment": "io",
          "match": "\\b[012]:",
          "name": "constant.language"
        },
        {
          "comment": "byte",
          "match": "0x[[:xdigit:]]*",
          "name": "constant.numeric"
        },
        {
          "comment": "time",
          "match": "\\d{2}:[0-5]\\d(:[0-5]\\d(\\.\\d+)?)?",
          "name": "constant.numeric"
        },
        {
          "comment": "date",
          "match": "\\d{4}\\.[01]\\d(\\.[01]\\d|m)",
          "name": "constant.numeric"
        },
        {
          "comment": "timestamp",
          "match": "(\\d{4}\\.[01]\\d\\.[0-3]\\d[DT]|\\d+D)([012]\\d:[0-5]\\d:[0-5]\\d(\\.\\d+)?)?",
          "name": "constant.numeric"
        },
        {
          "comment": "number",
          "match": "-?\\d+(e[+-]?\\d+)?[hijefcnuvt]?",
          "name": "constant.numeric"
        },
        {
          "comment": "number",
          "match": "-?(\\d+)?\\.\\d*(e[+-]?\\d+)?[ef]?",
          "name": "constant.numeric"
        },
        {
          "name": "string.quoted.double",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape",
              "match": "\\\\."
            }
          ]
        },
        {
          "comment": "symbol",
          "name": "entity.name.type",
          "match": "`[a-zA-Z0-9\\.]*(:[a-zA-Z0-9\\.:/]*|[a-zA-Z0-9\\.]*)"
        }
      ]
    }
  }
}
